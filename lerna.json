{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "version": "0.1.0",
  "useWorkspaces": true,
  "command": {
    "version": {
      "conventionalCommits": true,
      "allowBranch": [
        "master"
      ],
      "message": "chore(release): publish version %s",
      "yes": true,
      "ignoreChanges": [
        "**/*.md",
        "**/tests/**",
        "**/.eslintrc.js",
        "**/.gitignore",
        "**/jest.config.js"
      ]
    }
  }
}
